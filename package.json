{
  "name": "waves",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  
   "scripts": {
    "dev": "concurrently -n \"Next,Socket\" -c \"cyan,magenta\" --kill-others-on-fail \"next dev --turbopack\" \"tsx watch src/socket/socket.ts\"",
    "dev:next": "next dev --turbopack",
    "dev:socket": "tsx watch src/socket/socket.ts",

    "build": "npm run build:next && npm run build:socket",
    "build:next": "next build",
    "build:socket": "tsc --project tsconfig.socket.json",

    "start": "concurrently -n \"Next,Socket\" --kill-others-on-fail \"npm run start:next\" \"npm run start:socket\"",
    "start:next": "next start",
    "start:socket": "node dist/socket.js",

    "lint": "next lint",

    "preview": "npm run build && npm run start"
  },

  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.7.0",
    "dotenv": "^17.2.1",
    "firebase": "^11.10.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.525.0",
    "mongoose": "^8.16.5",
    "next": "15.3.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-redux": "^9.2.0",
    "react-toastify": "^11.0.5",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^11.1.0",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "nodemon": "^3.1.10",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5"
  }
}
